<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <add key="Host" value="$(hca_hostname)" />
    <add key="BaseUrl" value="https://$(Host)/apix/client/commerce" />
    <add key="BaseSCUrl" value="https://$(Host)/sitecore/api/layout/render" />
    <add key="ScAnalyticsGlobalCookie" value="$(sitecore_analytics_global_cookie)" />
    <add key="GraphQLSandboxUrl" value="$(braintree_sandbox_url)" />
    <add key="BraintreeMerchantId" value="$(braintree_merchant_id)" />
    <add key="BraintreePublicKey" value="$(braintree_public_key)" />
    <add key="BraintreePrivateKey" value= "$(braintree_private_key)" />
    <add key="braintree-version" value="$(braintree_version)" />
    <add key="content-type" value="application/json" />
  </appSettings>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-12.0.0.0" newVersion="12.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>