    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "HCA solution scaffold",
            "program": "${env:APPDATA}\\npm\\node_modules\\yo\\lib\\cli.js",
            "args": [
                "hca"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
        }, 

        {
            "type": "node",
            "request": "launch",
            "name": "HCA solution gulpfile",
            "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "--nolazy"
            ],
            "console": "internalConsole",
        }
    ]
}