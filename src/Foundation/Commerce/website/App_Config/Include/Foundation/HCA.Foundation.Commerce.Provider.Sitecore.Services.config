<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:commerceProvider="http://www.sitecore.net/xmlconfig/commerceProvider/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Standalone or ContentManagement" commerceProvider:require="Sitecore">
    <services>
      <!-- Services -->
      <register serviceType="HCA.Foundation.Commerce.Services.Search.IProductSearchService, HCA.Foundation.Commerce"
                implementationType="HCA.Foundation.Commerce.Services.Search.Commerce.CommerceProductSearchService, HCA.Foundation.Commerce" />

      <register serviceType="HCA.Foundation.Commerce.Services.Search.IProductSuggestionService, HCA.Foundation.Commerce"
                implementationType="HCA.Foundation.Commerce.Services.Search.Commerce.CommerceProductSuggestionService, HCA.Foundation.Commerce" />

      <!-- Converters -->
      <register serviceType="HCA.Foundation.Commerce.Services.Search.ISearchResultsConverter, HCA.Foundation.Commerce"
                implementationType="HCA.Foundation.Commerce.Services.Search.Commerce.CommerceSearchResultsConverter, HCA.Foundation.Commerce" />
    </services>
  </sitecore>
</configuration>